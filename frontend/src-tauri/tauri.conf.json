{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "NWN2EE Save Editor",
  "version": "0.1.0",
  "identifier": "com.nwn2ee.saveeditor",
  "build": {
    "devUrl": "http://localhost:24314",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build:fastapi && npm run build",
    "frontendDist": "../out"
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://api.github.com/repos/Micrommanner/nwn2_ee_editor/releases/latest"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEREQTE5OTY4NjY3QkNERDIKUldUU3pYdG1hSm1oM2YvbUZQNjZ3Qlc2RXhTNzRTYkpQTUhJL0pBdGJVeEtHOUNoWFIzaHI2NysK"
    },
    "core": {
      "injectIpcScript": true
    }
  },
  "app": {
    "windows": [
      {
        "title": "NWN2:EE Save Editor",
        "width": 1600,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "maximizable": true,
        "devtools": true,
        "decorations": false,
        "titleBarStyle": "Overlay",
        "label": "main"
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis",
      "appimage",
      "deb",
      "zip"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "both"
      }
    },
    "externalBin": [],
    "resources": [
      "binaries/fastapi_server.dist"
    ]
  }
}